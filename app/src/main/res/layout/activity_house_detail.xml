<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <cn.bingoogolapple.bgabanner.BGABanner
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:banner_indicatorGravity="bottom|center_horizontal"
                    app:banner_pageChangeDuration="3000"
                    app:banner_pointContainerBackground="@android:color/transparent"
                    app:banner_pointDrawable="@drawable/banner_selecter"
                    app:banner_pointTopBottomMargin="5dp"
                    app:banner_transitionEffect="fade" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_item_height"
                    android:layout_marginTop="@dimen/title_item_height"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/leftback" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/topfenxiang" />

                        <ImageView
                            android:id="@+id/iv_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:src="@mipmap/topshoucang" />
                    </LinearLayout>
                </RelativeLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_province"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:text="Unilodge South Brisbane"
                android:textColor="#2b2b2b"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_detai_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="8dp"
                android:text="14 Norinda Street Sannybank QLD 4109"
                android:textColor="#787878"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#fff9f2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="距离 昆士兰大学 st 校区"
                    android:textColor="#484848"
                    android:textSize="@dimen/sp_16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_drive_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/jlxqjiache"
                        android:drawablePadding="3dp"
                        android:text="8min"
                        android:textColor="#484848" />

                    <TextView
                        android:id="@+id/tv_bus_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:drawableLeft="@mipmap/jlxqgongjiao"
                        android:drawablePadding="3dp"
                        android:text="25min"
                        android:textColor="@color/collect_key" />

                    <TextView
                        android:id="@+id/tv_bike_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:drawableLeft="@mipmap/jlxqqiche"
                        android:drawablePadding="3dp"
                        android:text="10min"
                        android:textColor="@color/collect_key" />

                    <TextView
                        android:id="@+id/tv_walk_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:drawableLeft="@mipmap/jlxqbuxing"
                        android:drawablePadding="3dp"
                        android:text="28min"
                        android:textColor="#484848" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$230~280/周"
                    android:textColor="#ec6664"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/button_yellow_bg"
                    android:padding="@dimen/dp_5"
                    android:text="包家具，水电网"
                    android:textColor="#ffba00"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_house"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/color_f1">

                <net.lucode.hackware.magicindicator.MagicIndicator
                    android:id="@+id/magic_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/title_bar_height"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal" />

            </RelativeLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_house"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rl_house"
                android:descendantFocusability="afterDescendants" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_contect"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="#ec6664"
            android:contentDescription="@null"
            android:text="联系冰糖"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_apply"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="#49a399"
            android:contentDescription="@null"
            android:text="立即申请"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>