<?xml version="1.0" encoding="utf-8"?><!-- 收藏词条 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="15dp"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_pic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:background="@mipmap/banner1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@color/price_back"
            android:padding="@dimen/dp_5"
            android:text="$230/周"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/button_bg"
            android:padding="@dimen/dp_5"
            android:text="已付定金"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_house_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_pic"
        android:layout_margin="@dimen/dp_5"
        android:text="Sunnybank独立卫浴主卧出租"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_house_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_house_name"
        android:layout_margin="@dimen/dp_5"
        android:text="House | 4卧室2卫浴1车位 | 出租"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_house_name"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:text="巴斯瓜牛"
        android:textColor="@color/title_text_color" />


    <com.bthouse.view.CircleImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_above="@+id/et_username"
        android:layout_alignLeft="@+id/et_username"
        android:layout_alignStart="@+id/et_username"
        android:background="@mipmap/denglutx" />

</RelativeLayout>