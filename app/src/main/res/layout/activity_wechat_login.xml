<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.bthouse.view.CustomTextView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        app:centerTvColor="@color/login_text_color"
        app:centerTvSize="@dimen/sp_18"
        app:centerTvString="微信登陆"
        app:leftImg="@mipmap/hhleftback"
        app:leftImgMarginleft="@dimen/dp_20"
        app:rightTvMarginright="@dimen/dp_20"
         />

    <include layout="@layout/split_line" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/denglubt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="为了更好与你同行"
        android:textColor="#484848" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="请关联一个冰糖房源账号"
        android:textColor="#484848" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_new_wechat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="创建新账号"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="或者"
            android:layout_margin="@dimen/dp_20"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="#767676"/>

        <TextView
            android:id="@+id/tv_bang_wechat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_wechat_bg"
            android:gravity="center"
            android:text="绑定已有账号"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>


</LinearLayout>