<?xml version="1.0" encoding="utf-8"?>
<!-- 收藏词条 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="15dp"
    android:padding="5dp"
    android:background="#F1F1F1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/collect_key"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textColor="@color/collect_key"
        android:text="Norinda Street,QLD 4190 | House | 整租  "/>

    <TextView
        android:id="@+id/collect_key_"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@+id/collect_key"
        android:textColor="@color/collect_key"
        android:text="11月13号空出 | 长租 | $100 -- $300 "/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collect_key_"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/collect_search"
            android:drawableLeft="@mipmap/sssousuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textSize="@dimen/sp_12"
            android:paddingRight="5dp"
            android:layout_toLeftOf="@+id/collect_delete"
            android:layout_centerInParent="true"
            android:textColor="@color/collect_text"/>

        <TextView
            android:id="@+id/collect_delete"
            android:drawableLeft="@mipmap/shanchufy"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/collect_text"/>
    </RelativeLayout>

</RelativeLayout>